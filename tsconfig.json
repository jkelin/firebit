{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "jsx": "react",
      "lib": ["dom", "es6"],
      "moduleResolution": "node",
      "baseUrl": "./src",
      "rootDir": "./src"
    },
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ],
    "include": [
        "./src/**/*"
    ]
}
